    "requests": {
      "$ref": "#/definitions/requests"
    },
    "services": {
      "$ref": "#/definitions/services"
    },
    "solutions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/solution"
      },
      "uniqueItems": true
    }
  },
  "additionalProperties": false
