{
  "title": "OpenDXL API Schema",
  "id": "https://opendxl.com/v1/schema.json#",
  "$schema": "http://json-schema.org/schema#",
  "required": [
    "opendxlApi",
    "info"
  ],
  "definitions": {
    "otherField": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "$ref": "http://json-schema.org/draft-04/schema#/properties/description"
        },
        "example": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "message": {
      "type": "object",
      "properties": {
        "payload": {
          "$ref": "http://swagger.io/v2/schema.json#/definitions/schema"
        },
        "otherFields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/otherField"
          },
          "uniqueItems": true
        },
        "description": {
          "$ref": "http://json-schema.org/draft-04/schema#/properties/description"
        },
        "externalDocs": {
          "$ref": "http://swagger.io/v2/schema.json#/definitions/externalDocs"
        }
      },
      "additionalProperties": false
    },
    "response": {
      "allOf": [
        {
          "$ref": "#/definitions/message"
        }
      ],
      "additionalProperties": false
    },
    "request": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/message"
        }
      ],
      "properties": {
        "tags": {
          "$ref": "http://json-schema.org/draft-04/schema#/definitions/stringArray"
        },
        "response": {
          "$ref": "#/definitions/response"
        },
        "errorResponses": {
          "type": "object",
          "patternProperties": {
            "^-?[0-9]+$": {
              "$ref": "#/definitions/response"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "requests": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/request"
      }
    },
    "event": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/message"
        }
      ],
      "properties": {
        "tags": {
          "$ref": "http://json-schema.org/draft-04/schema#/definitions/stringArray"
        }
      },
      "additionalProperties": false
    },
    "events": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/event"
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "info": {
          "$ref": "http://swagger.io/v2/schema.json#/definitions/info"
        },
        "externalDocs": {
          "$ref": "http://swagger.io/v2/schema.json#/definitions/externalDocs"
        },
        "requests": {
          "type": "object",
          "additionalProperties": {
            "allOf": [
              {
                "$ref": "http://swagger.io/v2/schema.json#/definitions/jsonReference"
              },
              {
                "properties": {
                  "$ref": {
                    "pattern": "^#/requests/[^/]+"
                  }
                }
              }
            ]
          }
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "services": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/service"
      }
    },
    "solution": {
      "type": "object",
      "properties": {
        "info": {
          "$ref": "http://swagger.io/v2/schema.json#/definitions/info"
        },
        "externalDocs": {
          "$ref": "http://swagger.io/v2/schema.json#/definitions/externalDocs"
        },
        "events": {
          "type": "object",
          "additionalProperties": {
            "allOf": [
              {
                "$ref": "http://swagger.io/v2/schema.json#/definitions/jsonReference"
              },
              {
                "properties": {
                  "$ref": {
                    "pattern": "^#/events/[^/]+"
                  }
                }
              }
            ]
          }
        },
        "services": {
          "type": "object",
          "additionalProperties": {
            "allOf": [
              {
                "$ref": "http://swagger.io/v2/schema.json#/definitions/jsonReference"
              },
              {
                "properties": {
                  "$ref": {
                    "pattern": "^#/services/[^/]+"
                  }
                }
              }
            ]
          }
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "opendxlApi": {
      "type": "string",
      "enum": [
        "0.1"
      ],
      "description": "The OpenDXL API version of this document"
    },
    "info": {
      "$ref": "http://swagger.io/v2/schema.json#/definitions/info"
    },
    "externalDocs": {
      "$ref": "http://swagger.io/v2/schema.json#/definitions/externalDocs"
    },
    "tags": {
      "$ref": "http://swagger.io/v2/schema.json#/properties/tags"
    },
    "baseTopic": {
      "type": "string"
    },
    "events": {
      "$ref": "#/definitions/events"
    },
    "requests": {
      "$ref": "#/definitions/requests"
    },
    "services": {
      "$ref": "#/definitions/services"
    },
    "solutions": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/solution"
      }
    }
  },
  "additionalProperties": false
}
